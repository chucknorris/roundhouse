<?xml version="1.0" encoding="utf-8" ?>
<project name="Packager" default="go">
  <!-- Project UppercuT - http://uppercut.googlecode.com -->
  <!-- DO NOT EDIT THIS FILE - Add custom tasks in BuildTasks.Custom folder with file by the same name - find out more at http://uppercut.pbwiki.com -->
  <property name="build.config.settings" value="__NONE__" overwrite="false" />
  <include buildfile="${build.config.settings}" if="${file::exists(build.config.settings)}" />
  <property name="dirs.current" value="${directory::get-parent-directory(project::get-buildfile-path())}" />
  <property name="project.name" value="__SOLUTION_NAME_WITHOUT_SLN_EXTENSION__" overwrite="false" />
  <property name="folder.deployment" value="deployment" overwrite="false" />
  <property name="folder.code_build" value="build_output" overwrite="false" />
  <property name="dirs.build" value="${dirs.current}\..\${folder.code_build}" />
  <property name="folder.code_drop" value="code_drop" overwrite="false" />
  <property name="dirs.drop" value="${dirs.current}\..\${folder.code_drop}" overwrite="false" />
  <property name="folder.app.drop" value="${project.name}" overwrite="false" />
  <property name="dirs.lib" value="${dirs.current}\..\lib" overwrite="false" />  
  <property name="dirs.deployment" value="${dirs.drop}\${folder.deployment}" />
  <property name="path.file.test_databases" value="${dirs.current}\..\product\testdatabase" />
  <property name="folder.sample" value="sample" overwrite="false" />

  <target name="go" depends="cleanup_roundhouse_drop, restructure_roundhouse_drop_folder, copy_roundhouse_files_to_deploy_console, copy_test_databases_to_deploy, create_copy_of_environment_file_for_sample, move_sample_to_drop, copy_notices" description="Packaging" />

  <target name="cleanup_roundhouse_drop">
    <echo level="Warning" message="Removing ${dirs.drop}\${folder.app.drop}." />
    <delete>
      <fileset basedir="${dirs.drop}\${folder.app.drop}">
        <include name="**/*.*" />
      </fileset>
    </delete>
    
    <echo level="Warning" message="Renaming ${dirs.drop}\_PublishedApplications to ${dirs.drop}\${folder.app.drop}." />
    <move todir="${dirs.drop}\${folder.app.drop}" overwrite="true">
      <fileset basedir="${dirs.drop}\_PublishedApplications">
        <include name="**/*.*" />
      </fileset>
    </move>
    
    <delete dir="${dirs.drop}\_PublishedApplications" />
  </target>

  <target name="restructure_roundhouse_drop_folder">
    <echo level="Warning" message="Renaming ${dirs.drop}\${folder.app.drop}\roundhouse to ${dirs.drop}\${folder.app.drop}\lib." />
    <move todir="${dirs.drop}\${folder.app.drop}\lib" overwrite="true">
      <fileset basedir="${dirs.drop}\${folder.app.drop}\roundhouse">
        <include name="**/*.*" />
      </fileset>
    </move>
    <delete dir="${dirs.drop}\${folder.app.drop}\roundhouse" />
    
    <echo level="Warning" message="Renaming ${dirs.drop}\${folder.app.drop}\roundhouse.tasks to ${dirs.drop}\${folder.app.drop}\MSBuild." />
    <move todir="${dirs.drop}\${folder.app.drop}\MSBuild" overwrite="true">
      <fileset basedir="${dirs.drop}\${folder.app.drop}\roundhouse.tasks">
        <include name="**/*.*" />
      </fileset>
    </move>
    <delete dir="${dirs.drop}\${folder.app.drop}\roundhouse.tasks" />
    
    <echo level="Warning" message="Renaming ${dirs.drop}\${folder.app.drop}\roundhouse.console to ${dirs.drop}\${folder.app.drop}\console." />
    <move todir="${dirs.drop}\${folder.app.drop}\console" overwrite="true">
      <fileset basedir="${dirs.drop}\${folder.app.drop}\roundhouse.console">
        <include name="**/*.*" />
      </fileset>
    </move>
    <delete dir="${dirs.drop}\${folder.app.drop}\roundhouse.console" />
  </target>
  
  <target name="copy_roundhouse_files_to_deploy_console">
    <echo level="Warning" message="Copying roundhouse assemblies to ${dirs.deployment}\console."/>
    <copy todir="${dirs.deployment}\Console">
      <fileset basedir="${dirs.drop}\${folder.app.drop}\console">
        <include name="*.*" />
      </fileset>
    </copy>
  </target>

  <target name="copy_test_databases_to_deploy">
    <echo level="Warning" message="Copying roundhouse test databases from ${path.file.test_databases} to ${dirs.deployment}."/>
     <copy todir="${dirs.deployment}">
      <fileset basedir="${path.file.test_databases}">
        <include name="**/*.*" />
      </fileset>
    </copy>
  </target>

  <target name="create_copy_of_environment_file_for_sample">
    <copy 
      file="${dirs.drop}\db\SQLServer\TestRoundhousE\permissions\LOCAL.GrantRobDataReaderDataWriterPermissions.ENV.sql"
      tofile="${dirs.drop}\db\SQLServer\TestRoundhousE\permissions\TEST.GrantRobDataReaderDataWriterPermissions.ENV.sql" 
      failonerror="false"
      />
  </target>
  
  <target name="move_sample_to_drop">
    <copy todir="${dirs.drop}\${folder.sample}\sampleproject">
      <fileset basedir="${dirs.build}\..\${folder.sample}">
        <exclude name="**\bin\**" />
        <exclude name="**\obj\**" />
        <exclude name="**\_Resharper*\**" />
        <exclude name="**\_ReSharper*\**" />        
        <exclude name="**\packages\**" />
        <include name="**\**" />
      </fileset>
    </copy>
  
    <copy todir="${dirs.drop}\${folder.sample}">
      <fileset basedir="${dirs.drop}">
        <include name="${folder.database}\**" />
        <include name="${folder.deployment}\**" />
        <include name="${folder.settings}\**" />
      </fileset>
    </copy>

    <delete dir="${dirs.drop}\${folder.database}" />
    <delete dir="${dirs.drop}\${folder.deployment}" />
    <delete dir="${dirs.drop}\${folder.settings}" />
  </target>
  
  <target name ="copy_notices">
    <echo level="Warning" message="Packaging readme file to ${dirs.drop}."/>
    <copy file="${dirs.current}\..\README.markdown" tofile="${dirs.drop}\ReadMe.txt" />
    
    <echo level="Warning" message="Packaging other legal stuff to ${dirs.drop}\LEGAL."/>
    <copy todir="${dirs.drop}\LEGAL">
      <fileset basedir="${dirs.current}\..\docs\legal">
        <include name="**/*" />
      </fileset>
    </copy>
  </target>
  
</project>